<h1>Preview and Edit Post</h1>


<% if @post.errors.any? %>
<h2>The following is what prevented the Post from being submitting:</h2>
<ul>
     <% @post.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
     <% end %>
</ul>
<% end %>

<%= form_for @post do |f| %>
<p>
     <%= f.label :content %><br>
     <%= f.text_area :content %>
</p>
<p>
     <%= f.submit %>
</p>

<% end %>

<%= link_to 'Back to Posts', posts_path %>
